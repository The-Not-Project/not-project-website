generator client {
  provider = "prisma-client"
  output   = "../lib/prisma/generated"
}

datasource db {
  provider = "mysql"
}

model category {
  id          String          @id @default(uuid())
  name        String          @unique
  description String
  stories     storycategory[]
}

model save {
  id        String   @id @default(uuid())
  userId    String
  storyId   String
  createdAt DateTime @default(now())
  story     story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([storyId], map: "save_storyId_fkey")
  @@index([userId], map: "save_userId_fkey")
}

model story {
  id            String          @id @default(uuid())
  title         String
  borough       String
  content       String          @db.Text
  summary       String          @db.Text
  authorId      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @default(now())
  thumbnail     String          @default("/media/its_in_motion.png")
  isPublished   Boolean         @default(false)
  isRadar       Boolean         @default(false)
  isRecommended Boolean         @default(false)
  isTrashed     Boolean         @default(false)
  save          save[]
  author        user            @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categories    storycategory[]

  @@index([authorId], map: "story_authorId_fkey")
  @@index([isRadar, updatedAt(sort: Desc)])
  @@index([isRecommended, updatedAt(sort: Desc)])
}

model storycategory {
  storyId    String
  categoryId String
  category   category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  story      story    @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@id([storyId, categoryId])
  @@index([categoryId], map: "storycategory_categoryId_fkey")
}

model subscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  phone     String?
}

model user {
  id        String  @id @unique
  firstName String
  lastName  String
  email     String  @unique
  save      save[]
  story     story[]
}
